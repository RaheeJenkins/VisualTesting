<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test Automation" parallel="tests">

    <test name="Chrome GitHub Login Page">

        <parameter name="environment" value="Grid" />
        <parameter name="browser" value="Chrome" />
        <parameter name="URL" value="https://github.com/login" />

        <classes>
            <class name="tests.github.LoginPage" />
        </classes>
    </test>

    <test name="Chrome GitHub Signup Page">

        <parameter name="environment" value="Grid" />
        <parameter name="browser" value="Chrome" />
        <parameter name="URL" value="https://github.com/join?source=experiment-header-dropdowns-home" />

        <classes>
            <class name="tests.github.SignUpPage" />
        </classes>
    </test>

